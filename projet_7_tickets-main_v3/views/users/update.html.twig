{% block main %}

	<div class="container">
		<div class="row">
			<form class="col-md-6 mx-auto mt-5" method="post" action="/update/{{ user.id }}">
				<div>
					<label for="name_user">Nom</label>
					<input type="text" class="form-control" name="name" value="{{user.name}}">
				</div>
				<div>
					<label for="name_user">Pr√©nom</label>
